@model IEnumerable<MVC.Models.Customer>

@{
    ViewData["Title"] = "Customer Dashboard Systemm";
     
    // Safely read query string "view"
    var viewQuery = Context.Request.Query["view"].ToString();
    bool showCustomers = !string.IsNullOrEmpty(viewQuery) && viewQuery.ToLower() == "true";
}

<h1 class="mb-4 text-primary">Customer Dashboard</h1>

@if (!showCustomers)
{
    <!-- Step 1: Show options -->
    <div class="d-flex gap-3">
        <a asp-action="Create" class="btn btn-success btn-lg">Add Customer</a>
        <a asp-action="Index" class="btn btn-primary btn-lg" asp-route-view="true">View Customers</a>
    </div>
}
else
{
    <!-- Step 2: Show customer table -->
    <p>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
        <a asp-action="Create" class="btn btn-success">Add Customer</a>
    </p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning p-3">
            <strong>No customer exists in the database.</strong>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Password</td> <!-- Optional: hide in production -->
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info text-white">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
