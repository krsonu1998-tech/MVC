@model IEnumerable<MVC.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h1 class="mb-4 text-primary">Customer List</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning p-3">
        <strong>No customer exists in the database.</strong>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-success">Register New Customer</a>
    </p>
}
else
{
    <div id="app">
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <a asp-action="Create" class="btn btn-primary">Create New Customer</a>

            <!-- Vue.js reactive search -->
            <input type="text" v-model="search" class="form-control w-25" placeholder="Search by name..." />
        </div>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <tr v-for="customer in filteredCustomers" :key="customer.customerId">
                    <td>{{ customer.fullName }}</td>
                    <td>{{ customer.email }}</td>
                    <td>{{ customer.password }}</td>
                    <td>
                        <a :href="'/Customers/Edit/' + customer.customerId" class="btn btn-sm btn-warning">Edit</a>
                        <a :href="'/Customers/Details/' + customer.customerId" class="btn btn-sm btn-info text-white">Details</a>
                        <a :href="'/Customers/Delete/' + customer.customerId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <!-- Vue.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>

    <script>
        const customersData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));

        new Vue({
            el: '#app',
            data: {
                search: '',
                customers: customersData
            },
            computed: {
                filteredCustomers() {
                    if (!this.search) return this.customers;
                    return this.customers.filter(c =>
                        c.fullName.toLowerCase().includes(this.search.toLowerCase())
                    );
                }
            }
        });
    </script>
}
